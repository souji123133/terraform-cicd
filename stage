stages {
        stage('git checkout') {
            steps {
                sh 'git clone https://github.com/MohammadRafeeq7095/Terraform_CICD.git'
            }
        }
        stage('terraform init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('terraform plan') {
            steps {
                sh 'terraform plan'
            }
        }
        stage('terraform apply') {
            steps {
                sh 'terraform apply -auto-approve'
            }
        }
    }
